{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order",
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "selector-class-pattern": [
      "^(?:[a-z]+[0-9]*(-{0,2}|_{2})?)*[a-z0-9]*(-)*[a-z0-9]+$",
      {
        "message": "Selector should be written in the BEM selector pattern"
      }
    ]
  }
}
